# Usage cd-policy-for <account-id>

numargs=$#
program=$0
account=$1

policyname="cdk-dev"

cat ./assets/cdk-policy-template.json | sed -e s/\$\{accountid\}/${account}/g > tmp-policy.json

# echo "aws iam create-policy --policy-name ${policyname} --policy-document ${policy} --tags Key=\"role\",Value=\"dev\" "
aws iam create-policy --policy-name ${policyname} --policy-document file://tmp-policy.json --tags Key="role",Value="dev"
